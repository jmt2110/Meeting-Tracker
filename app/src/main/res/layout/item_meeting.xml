<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp">

    <TextView
        android:id="@+id/meetingWho"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meetingDate"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/meetingTime"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toEndOf="@+id/meetingWho"
        app:layout_constraintTop_toTopOf="@+id/meetingWho" />

    <TextView
        android:id="@+id/meetingTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="108dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/meetingWho"
        app:layout_constraintTop_toTopOf="@+id/meetingDate" />

    <TextView
        android:id="@+id/meetingLocation"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingWho" />

    <TextView
        android:id="@+id/meetingAdditional"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meetingLocation"
        app:layout_constraintTop_toTopOf="@+id/meetingLocation" />

    <TextView
        android:id="@+id/idPriorityNotify"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textColorLink="#000000"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/meetingTime"
        app:layout_constraintTop_toTopOf="@+id/meetingTime" />

</androidx.constraintlayout.widget.ConstraintLayout>